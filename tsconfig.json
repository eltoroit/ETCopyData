{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
